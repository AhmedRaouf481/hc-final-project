<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet  id="001-01"  author="omaraalsaied">
        <createTable tableName="users">
            <column name="id" type="int(11)" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="phone" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" />
        </createTable>
    </changeSet>
    <changeSet id="002-01" author="omaraalsaied">
        <insert tableName="users">
            <column name="username" value="omaraalsaied"/>
            <column name="email" value="omar@email.com" />
            <column name="password" value="Pas$word" />
            <column name="phone" value="+201553216735" />
        </insert>
    </changeSet>
    <changeSet id="001-03" author="omaraalsaied">
       <addColumn tableName="users">
            <column name="name" type="varchar(255)"/>
       </addColumn>
    </changeSet>

    <changeSet id="001-04" author="omaraalsaied">
        <addUniqueConstraint tableName="users" columnNames="email" />
        <addUniqueConstraint tableName="users" columnNames="username" />
    </changeSet>
</databaseChangeLog>