<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet  id="006-01"  author="omaraalsaied">
        <createTable tableName="admins">
            <column name="id" type="int(11)" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="user_id" type="int(11)">
                <constraints nullable="false" />
            </column>
            <column name="salary" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="admins" baseColumnNames="user_id" constraintName="admin_user_id" referencedTableName="users"
                                 referencedColumnNames="id" />
    </changeSet>

</databaseChangeLog>