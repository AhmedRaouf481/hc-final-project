<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="017-1" author="araouf">
        <createTable tableName="clinics">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints unique="true" nullable="false" />
            </column>
            <column name="location_id" type="int" />
        </createTable>
        <addForeignKeyConstraint constraintName="fk_clinic_location"
            baseTableName="clinics" baseColumnNames="location_id"
            referencedTableName="locations" referencedColumnNames="id" />
    </changeSet>
</databaseChangeLog>